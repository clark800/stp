#!/bin/sh
set -e

TITLE="${SSG_TITLE}"
EXT="${SSG_EXTENSION:-md}"
PROCESSOR="${SSG_PROCESSOR:-smu}"
CONFIG="${SSG_CONFIG:-.ssg}"

println() {
    printf '%s\n' "$1"
}

find_files() {
    find "$1" -name '.?*' -prune -o -type f -name "$2" -print
}

is_generated() {
    grep -q -x '<meta name="generator" content="ssg">' "$1"
}

is_custom_html() {
    [ -e "$1" ] && ! is_generated "$1"
}

titlecase() {
    tr '_ -' '\n\n\n' |
    while IFS='' read -r word; do
        printf ' %.1s' "$word" | tr '[:lower:]' '[:upper:]'
        printf '%s' "${word#?}"
    done | cut -c 2-
}

format_title() {
    if [ "${1%.*}" == "$1" ]; then
        println "$1" | titlecase
    else
        println "$1"    # contains a period; likely a domain name
    fi
}

get_site_title() {
    if [ "$TITLE" ]; then
        println "$TITLE"
    else
        format_title "$(basename "$(pwd)")"
    fi
}

get_html_title() {
    cat "$1" | tr -d '\r\n' | sed -n 's|.*<title>\(.*\)</title>.*|\1|p'
}

get_h1_title() {
    sed '/<\/h1>/q' | tr -d '\r\n' | sed -n 's|.*<h1>\(.*\)</h1>.*|\1|p'
}

get_meta_value() {
    sed -n "s/<meta name=\"$1\" content=\"\(.*\)\">/\1/p"
}

process_template() {
    dir="$1" title="$2" eval "printf '%s\\n' \"$(sed 's/"/\\"/g')\""
}

get_header() {  # args: dir, title
    cat "$CONFIG/templates/header.html" | process_template "$1" "$2"
}

get_footer() {  # args: dir, title
    cat "$CONFIG/templates/footer.html" | process_template "$1" "$2"
}

gen_content_page() {
    source="$1"
    dir="${source%/*}"
    content="$(grep -v '^%' "$source" | $PROCESSOR)"
    title="$(println "$content" | get_h1_title)"
    get_header "$dir" "$title"
    println "<article>"
    println "$content"
    println "</article>"
    get_footer "$dir" "$title"
}

apply_transforms() {
    if [ ! "$1" ]; then
        cat
    else
        "${1%%;*}" "$2" | apply_transforms "${1#*;}" "$2"
    fi
}

gen_content_pages() {
    find_files "." "*.$EXT" |
    while IFS='' read -r source; do
        html="${source%.*}.html"
        if ! is_custom_html "$html"; then
            println "${html#./}" >&2
            gen_content_page "$source" |
                apply_transforms "$TRANSFORMS" "$source" > "$html"
        fi
    done
}

register_generator() {
    GENERATORS="$GENERATORS$1;"
}

register_transform() {
    TRANSFORMS="$TRANSFORMS$1;"
}

import_plugins() {
    if [ -r "$CONFIG/plugins" ]; then
        for plugin in "$CONFIG/plugins"/*.sh; do
            if [ -r "$plugin" ]; then
                . "$plugin"
            fi
        done
    fi
}

cd "${1:-.}" || exit 1
import_plugins
gen_content_pages
eval "$GENERATORS"
